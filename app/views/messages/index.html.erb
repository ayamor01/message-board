<style>
  .panel-heading {
    font-weight: bold;
    font-size: 20px;
  }
  
</style>

<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
  
  <div class="panel-body">
      <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
      <% end %>
  </div>
</div>

<div class="form-horizontal">
  <%= form_for(Message.new) do |f| %>
    <div class="form-group">
      <label for="input_name", class="control-label col-sm-1">名前</label>
      <div class="col-sm-11">
        <%= f.text_field :name, class: "form-control", id: "input_name" %>
      </div>
    </div>
    <div class="form-group">
      <label for="input_text", class="control-label col-sm-1">内容</label>
      <div class="col-sm-11">
        <%= f.text_area :body, class: "form-control", id: "input_text" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit  class: "btn btn-md btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>